<style>
	footer {
		text-align: center;
		margin-top: 8rem;
		padding-top: 3rem;
		padding-right: 2rem;
		padding-bottom: 4rem;
		padding-left: 2rem;
		background-color: black;
		color: white;
	}

	.contact {
		margin-bottom: -0rem;
		display: grid;
		grid-gap: 0px;
		height: 100px;
		max-width: 100vw;
	}

	hr.break {
		width: 80%;
		margin-bottom: 2rem;
		border: 1.5px solid #464646;

		border-radius: 10px;
	}

	.entry {
		margin-top: -20px;
		margin-bottom: -20px;
		color: white;
		text-decoration-color: white;
		accent-color: white;
		text-decoration: none;
		
	}

	@media (min-width: 1200px) {
				.contact {
					grid-template-columns: 33% 33% 33%;
				}
			}

	.icon {
		position: relative;
		top: 10px;
		right: 5px;
		font-size: 2rem;
	}

	.byline {
		display: block;
		margin-top: 1rem;
		color: var(--t-subdue);
		font-size: var(--f-d2);
		text-transform: uppercase;
	}
</style>
