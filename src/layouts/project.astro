---
import MainHead from "../components/MainHead.astro";
import Footer from "../components/Footer.astro";
import Nav from "../components/Nav.astro";
import type { Project } from "../types";

interface Props {
	content: Project;
}

const { content } = Astro.props;
---

<html lang="en">
	<head>
		<MainHead title={content.title} description={content.description} />
		<style>
			
			.hero-wrap {
				width: fit-content;
				display: inline-block;
				padding-left: auto;
				margin-right: 0;
				height: fit-content
			}
			.hero {
				padding-bottom: 0;
				vertical-align: center;
				object-fit:fill;
				margin-top: 0em;
				margin-bottom: 0em;
				display: block;
  				margin-left: auto;
  				margin-right: auto;
  				width: 100%;
				max-width: 800px;
			}

			.tag {
				margin-left: 0.5em;
				margin-right: 0.5em;
				text-transform: uppercase;
			}

			.tag:nth-of-type(1n) {
				color: var(--c-green);
			}
			.tag:nth-of-type(2n) {
				color: var(--c-orange);
			}
			.tag:nth-of-type(3n) {
				color: var(--c-blue);
			}
			.tag:nth-of-type(4n) {
				color: var(--c-pink);
			}

			.title {
				font-size: var(--f-u1);
				font-weight: 700;
				text-transform: uppercase;
				letter-spacing: 0.0625em;
				padding: 20px 35px 20px 35px;
				background-color: black;
				width: fit-content;
				max-width: 60%;
				position:absolute;
				margin-top: -2.2em;
				margin-bottom: -20px;
				color: white;
				border-radius: 4px;
				margin-left: 0px;
			}

			.leadIn {
				padding-top: 4em;
				color: var(--t-bg);
				background-color: black;
				text-align: center;
			}

			.tagline {
				font-weight: 300;
				font-size: var(--f-u1);
				line-height: 1.5;
			}

			.content {
				font-size: var(--f-u1);
				line-height: 2.2;
				max-width: 50em;
				margin: auto;
			}

			.wrapper {
				padding-bottom: 4em;
				margin-bottom: 4em;
				margin-top: 0;
			}
			
			.white {
				color: white;
				width: 50vw;
				text-decoration: none;
			}

			footer {
				text-align: center;
				margin-top: 3rem;
			}
		</style>
	</head>
	<body>
		<Nav />
		<div class="">
		<img src={content.img} class="hero" height={650} width={940}/>
		</div>
		<h3 class="title">{content.title}</h3>
		<div class="leadIn">
			<div class="wrapper">
				{content.tags.map((t) => <span class="tag">{t}</span>)}
				<h3 class="tagline">{content.description}</h3>
				<a href={content.link} class="button white">View</a>
			</div>
		</div>
		<div class="wrapper">
			<div class="content"><slot /></div>
		</div>
		<footer>
			<a href="/projects" class="button">View More</a>
		</footer>
		<Footer />
	</body>
</html>
