---
import MainHead from '../components/MainHead.astro';
import Footer from '../components/Footer.astro';
import Nav from '../components/Nav.astro';
---

<html lang="en">
	<head>
		<MainHead title="Not Found" />
		<style>
			.wrapper {
				margin-top: 2em;
				margin-bottom: 2em;
				position: relative;
			}

			.form {
				display: grid;
				background-color: white;
			}

			.label {
				font-weight: 600;
				font-size: 5em;
			}

			.cover {
				width: 100%;
				height: 100px;
				background-color: black;
				margin-top: -6rem;
				z-index: 0;
			}
			
		</style>
	</head>
	<body>
		<Nav />
		<div class="wrapper">
			<form
  action="https://formspree.io/f/xlekrwdz"
  method="POST"
  style="form"
>
  <label style="label">
    Your email:
    <input type="email" name="email">
  </label>
  <label style="label">
    Your message:
    <textarea name="message"></textarea>
  </label>
  <!-- your other form fields go here -->
  <button type="submit">Send</button>
</form>
</div>
			<Footer />
	</body>
</html>
